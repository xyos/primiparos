extends layout

block content

  slide(class="logoslide nobackground")
    article(class="flexbox vcenter")
      span
        img(src="images/logo_un_white.png")

  slide(class="title-slide segue nobackground")
    aside(class="gdbar")
      img(src="images/google_developers_icon_128.png")
    hgroup(class="auto-fadein")
      h1(data-config-title)
      h2(data-config-subtitle)
      p(data-config-presenter)

  slide
    hgroup
      h2 title
      h3 subtitle
    article
      p texto
      ul
        li 1
        li 2
        li 3
        li 4

  slide
    hgroup
      h2 Derivados Financieros - orígenes
    article
      img(src="images/cow01.png",alt="ejemplo",title="ejemplo")
      footer(class="source") fuente: http://sweetpepper-stock.deviantart.com/art/Cow-2-10-07-06-36144026


  slide
    hgroup
      h2 Ejemplo
      h3 tabla
    article
      table(class="rows")
        tr
          th año
          th 1
          th 2
          th 3
        tr
          th 2012
          td 100
          td(class="highlight") 100
          td 100
        tr
          th 2013
          td 90
          td(class="highlight") 105
          td 150
        tr
          th 2014
          td 80
          td(class="highlight") 112
          td 300

  slide(class="segue dark nobackground")
    hgroup
      h2 oscura

  slide(class="segue dark nobackground")
    hgroup
      h2 Gracias.

  slide(class="backdrop")
